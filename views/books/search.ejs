<% layout("./layouts/boilerplate") %>
  <h1 class="display-4 text-center mb-5">Search results for: "<%= search %>"
  </h1>
  <div class="row pt-5">
    <%for (let book of books) {%>
      <a class="btn col-6 col-md-3 border-0" href="/books/<%=book.id%>">
        <img src="<%= book.imgUrl %>" class="img-fluid book-image w-100 h-100" alt="">
        <p>
          <% for (let i=0; i < book.rating; i++) {%>
            &#9733;
            <% } %>
        </p>
      </a>
      <%}%>
    <% if (books.length === 0) { %>
      <p class="display-7 text-center">Sorry, we couldn't find anything!</p>
      <% } %>
  </div>