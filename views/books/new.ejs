<% layout("./layouts/boilerplate") %>
<div class="row justify-content-center">
  <h1 class="display-3 text-center">Add new book</h1>
  <div class="col-md-8 col-lg-6">
    <form method="POST" action="/books" class="row validated-form" novalidate>
      <div class="col-6">
        <div class="col-12 mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" id="title" name="title" type="text" required>
        </div>
        <div class="col-12 mb-3">
          <label class="form-label" for="author">Author</label>
          <input class="form-control" id="author" name="author" type="text" required>
        </div>
        <div class="col-12 mb-3">
          <label class="form-label" for="year">Year of publication</label>
          <input class="form-control" id="year" name="year" type="number" required>
        </div>
      </div>
      <div class="col-6">
        <div class="col-12 mb-3">
          <label class="form-label" for="category">Categories</label>
          <select class="form-select" multiple aria-label="Category select" name="category" id="category" size="9">
            <% for (let category of categories) { %>
            <% if (category !== "None") { %>
            <option value="<%=category %>"><%=category %></option>
            <% } %>
            <% } %>
          </select>
        </div>
      </div>
      <div class="col-12 mb-3">
        <label class="form-label" for="summary">Summary</label>
        <textarea class="form-control" id="summary" name="summary"></textarea>
      </div>
      <div class="col-12 mb-3">
        <label class="form-label" for="imgUrl">Image URL</label>
        <input class="form-control" id="imgUrl" name="imgUrl" type="text">
      </div>
      <div class="col-12 mt-3 mb-5 d-grid gap-2">
        <button type="submit" id="submit" class="btn btn-success">Save</button>
      </div>
    </form>
  </div>
</div>