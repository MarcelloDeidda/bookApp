<% layout("./layouts/boilerplate") %>
<div class="row justify-content-center">
  <h1 class="display-3 text-center">Register</h1>
  <div class="col-md-8 col-lg-6">
    <form method="POST" action="/auth/register" class="row validated-form" novalidate>
      <div class="col-12 my-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" id="username" name="username" type="text" required>
      </div>
      <div class="col-6 mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" id="password" name="password" type="password" required>
      </div>
      <div class="col-6 mb-3">
        <label class="form-label" for="repeat-password">Repeat Password</label>
        <input class="form-control" id="repeat-password" name="repeatPassword" type="password" required>
      </div>
      <div class="col-12 mt-3 mb-5 d-grid gap-2">
        <button type="submit" class="btn btn-success" id="submit">Register</button>
      </div>
    </form>
  </div>
</div>
<script>
  const password = document.getElementById("password");
  const repeatPassword = document.getElementById("repeat-password");

  document.getElementById("submit").addEventListener("click", e => {
    if (password.value !== repeatPassword.value) {
      e.preventDefault();
      alert("The passwords should match!");
    }
  })
</script>